<div id="image">
    <img src="/img/burger.png" alt="burger">
</div>
<h1>YUMMY-BURGER</h1>
<div id="list">
    <ol>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block }}
        {{/unless}}
        {{/each}}
    </ol>

    <ol>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block }}
        {{/if}}
        {{/each}}
    </ol>
</div>

<div class="form_container">
    {{#unless burger_type}}
    <img src="/img/taste.png" alt="burger" id="character">
    {{/unless}}

    {{#if burger_type}}
    <img src="/img/eat.png" alt="burger" id="character">
    {{/if}}


    <form>
        <h2>Enter your burger</h2>
        <textarea name="burgerName" id="form__burgerName"
            placeholder="Enter any burger's name you want to eat and click the 'submit' button."></textarea>
        <button type="submit">Submit</button>
    </form>
</div>