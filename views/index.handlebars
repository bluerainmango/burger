<div>
    <img src="/img/burger.jpg" alt="" srcset="" style="width: 100px">
</div>
<div id="list">
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block }}
        {{/if}}
        {{/each}}
    </ul>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block }}
        {{/unless}}
        {{/each}}
    </ul>
</div>


<form>
    <textarea name="burgerName" id="form__burgerName" cols="30" rows="10"
        placeholder="Type the name of burger"></textarea>
    <button type="submit">Submit</button>
</form>